<h1>Articles</h1>
<div>
  <% if signed_in? %>
    <%= link_to "+ Create a new article", new_article_path, :class => "btn btn-success mb-3" %>
  <% end %>

</div>
<div class="d-flex justify-content-center">
  <%= will_paginate(@articles, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'justify-content-center') %>
</div>
<%= render 'article', obj: @articles %>
